# Abyrith Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================================================
# Supabase Configuration
# ============================================================================
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================================================
# Cloudflare Workers API
# ============================================================================
# Development: Use local Workers (http://localhost:8787)
# Production: Use deployed Workers (https://api.yourdomain.com)

NEXT_PUBLIC_WORKERS_URL=http://localhost:8787

# ============================================================================
# Application Configuration
# ============================================================================

# Application URL (for CORS, callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# ============================================================================
# Feature Flags (Optional)
# ============================================================================

# Enable AI chat features
NEXT_PUBLIC_FEATURE_AI_CHAT=true

# Enable guided acquisition
NEXT_PUBLIC_FEATURE_GUIDED_ACQUISITION=true

# Enable audit logging UI
NEXT_PUBLIC_FEATURE_AUDIT_LOGS=true

# ============================================================================
# Analytics & Monitoring (Optional)
# ============================================================================

# Sentry DSN (for error tracking)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Analytics tracking ID
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# ============================================================================
# GitHub OAuth Configuration
# ============================================================================
# Get these from GitHub App settings: https://github.com/settings/apps
# Create a new GitHub App or OAuth App for Abyrith integration

# GitHub OAuth App Client ID (public, exposed to browser)
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_oauth_client_id

# GitHub OAuth App Client Secret (server-side only, never exposed to browser)
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here

# OAuth callback URL (must match GitHub App settings)
NEXT_PUBLIC_GITHUB_REDIRECT_URI=http://localhost:3000/dashboard/github/callback

# Optional: GitHub App credentials for enhanced features
# GITHUB_APP_ID=your_github_app_id
# GITHUB_PRIVATE_KEY=your_github_app_private_key

# ============================================================================
# Development Settings
# ============================================================================

# Show debug information in console
NEXT_PUBLIC_DEBUG=false

# API request timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================================================
# Notes
# ============================================================================
#
# 1. Never commit .env.local to version control
# 2. NEXT_PUBLIC_* variables are exposed to the browser
# 3. Variables without NEXT_PUBLIC_ are server-side only
# 4. Restart dev server after changing env variables
#
# ============================================================================
